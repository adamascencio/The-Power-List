<%- include('./partials/header') %>
<div id="user-log-in">
  <form action="/users/login" method="POST">
    <h1><%= title %></h1>
    <div class="form-group">
      <div class="input-margin">
        <label class="form-label" for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
      </div>
      <div class="input-margin">
        <label class="form-label" for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
      </div>
      <button class="btn btn-primary btn-lg" type="submit">Log In</button>
      <hr>
    </div>
  </form>
  <div class="form-group">
    <a class="remove-text-decoration" href="/auth/google"><button class="btn btn-outline-dark btn-lg"><img class="google-logo" src="https://i.imgur.com/FHjYyi0.png">Continue with Google</button></a>
    <p>Don't have an account? <a href="/users/new">Sign Up</a></p>
  </div>
</div>
<%- include('./partials/footer') %>