<%- include('./partials/header') %>
<form id="user-log-in" action="/tasks" method="POST">
  <h1><%= title %></h1>
  <div class="form-group">
    <div class="input-margin">
      <label class="form-label" for="email">Email:</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
    </div>
    <div class="input-margin">
      <label class="form-label" for="password">Password:</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
    </div>
    <button class="btn btn-primary btn-lg" type="submit">Log In</button>
    <hr>
    <button class="btn btn-outline-dark btn-lg"><a class="remove-text-decoration" href="/auth/google">Continue with Google</a></button>
    <p>Don't have an account? <a href="/users/new">Sign Up</a></p>
  </div>
</form>
<%- include('./partials/footer') %>