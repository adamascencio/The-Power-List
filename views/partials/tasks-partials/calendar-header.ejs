<body>
  <nav id="main-navbar" class="navbar fixed-top bg-dark">
    <img id="avatar" src="<%= user.avatar %>" alt="<%= user.name %>">
    <a href="/tasks">Today's Tasks</a>
    <a href="/tasks/new">Add Daily Tasks</a>
    <a class="margin-left" href="/logout">Log Out</a>
  </nav>

  <nav id="alt-navbar" class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a href="/tasks"><img id="avatar" src="<%= user.avatar %>" alt="<%= user.name %>"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar"
